<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ryanforgie.javalistproject.SettingsActivity">

    <Button
        android:id="@+id/save_button"
        android:background = "@drawable/roundedbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onSaveButtonClicked"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/seventh_run_distance"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sixth_run_distance"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/seventh_type_spinner"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_bg_settings"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/sixth_run_distance"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifth_run_distance"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/seventh_type_spinner"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_bg_settings"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/fifth_run_distance"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourth_run_distance"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/seventh_type_spinner"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_bg_settings"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/fourth_run_distance"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_run_distance"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/seventh_type_spinner"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_bg_settings"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/third_run_distance"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_run_distance"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/seventh_type_spinner"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_bg_settings"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/second_run_distance"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_run_distance"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/seventh_type_spinner"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_bg_settings"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/first_run_distance"
     
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/seventh_type_spinner"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_bg_settings"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <Spinner
        android:id="@+id/seventh_type_spinner"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/sixth_type_spinner"
        android:background="@color/lightTextViewBackground"/>

    <Spinner
        android:id="@+id/sixth_type_spinner"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/fifth_type_spinner"
        android:background="@color/lightTextViewBackground"/>

    <Spinner
        android:id="@+id/fifth_type_spinner"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/fourth_type_spinner"
        android:background="@color/lightTextViewBackground"/>

    <Spinner
        android:id="@+id/fourth_type_spinner"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/third_type_spinner"
        android:background="@color/lightTextViewBackground"/>

    <Spinner
        android:id="@+id/third_type_spinner"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/second_type_spinner"
        android:background="@color/lightTextViewBackground"/>

    <Spinner
        android:id="@+id/second_type_spinner"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/first_type_spinner"
        android:background="@color/lightTextViewBackground"/>

    <Spinner
        android:id="@+id/first_type_spinner"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:background="@color/lightTextViewBackground"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Set Distance and Run Type"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
